<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.wmall.mapper.UserMapper">
	
  	<resultMap id="BaseResultMap" type="com.xy.wmall.model.User">
		<id column="id" property="id" />	
	    <result column="username" property="username" />
	    <result column="password" property="password" />
	    <result column="disabled" property="disabled" />
	    <result column="create_time" property="createTime" />
	    <result column="update_time" property="updateTime" />
	    <result column="is_delete" property="isDelete" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, username, password, disabled, create_time, update_time, is_delete
  	</sql>
  	
  	<!-- 根据主键查询 -->
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	select 
    	<include refid="Base_Column_List" />
    	from t_user
		where id = #{id}
  	</select>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.xy.wmall.model.User">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into t_user
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="username != null">
		        	username,
		      	</if>
		      	<if test="password != null">
		        	password,
		      	</if>
		      	<if test="disabled != null">
		        	disabled,
		      	</if>
		      	<if test="createTime != null">
		        	create_time,
		      	</if>
		      	<if test="updateTime != null">
		        	update_time,
		      	</if>
		      	<if test="isDelete != null">
		        	is_delete,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="username != null">
        			#{username},
      			</if>
      			<if test="password != null">
        			#{password},
      			</if>
      			<if test="disabled != null">
        			#{disabled},
      			</if>
      			<if test="createTime != null">
        			#{createTime},
      			</if>
      			<if test="updateTime != null">
        			#{updateTime},
      			</if>
      			<if test="isDelete != null">
        			#{isDelete},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.xy.wmall.model.User">
    	update t_user
    	<set>
			<if test="username != null">
    			username = #{username},
  			</if>
			<if test="password != null">
    			password = #{password},
  			</if>
			<if test="disabled != null">
    			disabled = #{disabled},
  			</if>
			<if test="isDelete != null">
    			is_delete = #{isDelete},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getUser" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_user
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="username != null">
    			and username = #{username}
  			</if>
  			<if test="password != null">
    			and password = #{password}
  			</if>
  			<if test="disabled != null">
    			and disabled = #{disabled}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询 -->
  	<select id="listUser" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_user
        <where>
  			<if test="username != null">
    			and username = #{username}
  			</if>
  			<if test="password != null">
    			and password = #{password}
  			</if>
  			<if test="disabled != null">
    			and disabled = #{disabled}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into t_user (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.username},
				#{item.password},
				#{item.disabled},
				#{item.createTime},
				#{item.updateTime},
				#{item.isDelete},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update t_user
			<set>
        		<if test="item.username != null">
        			username = #{item.username},
        		</if>
        		<if test="item.password != null">
        			password = #{item.password},
        		</if>
        		<if test="item.disabled != null">
        			disabled = #{item.disabled},
        		</if>
        		<if test="item.isDelete != null">
        			is_delete = #{item.isDelete},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
	<!-- 根据map查询 -->
  	<select id="listUserRole" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        	t1.*, t2.name role
        from t_user t1, t_role t2, t_user_role t3
        <where>
        	t1.id = t3.user_id
        	and t1.id = t3.role_id
  			<if test="username != null">
    			and t1.username = #{username}
  			</if>
  			<if test="disabled != null">
    			and t1.disabled = #{disabled}
  			</if>
  			<if test="isDelete != null">
    			and t1.is_delete = #{isDelete}
  			</if>
  			<if test="roleId != null">
    			and t3.role_id = #{roleId}
  			</if>
        </where>
        <if test="orderBy != null">
        	order by t1.${orderBy}
        </if>
  	</select>
	
</mapper>