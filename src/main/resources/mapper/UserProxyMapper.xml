<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.wmall.mapper.UserProxyMapper">
	
  	<resultMap id="BaseResultMap" type="com.xy.wmall.model.UserProxy">
		<id column="id" property="id" />	
	    <result column="user_id" property="userId" />
	    <result column="proxy_id" property="proxyId" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, user_id, proxy_id
  	</sql>
  	
  	<!-- 根据主键查询 -->
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	select 
    	<include refid="Base_Column_List" />
    	from t_user_proxy
		where id = #{id}
  	</select>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.xy.wmall.model.UserProxy">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into t_user_proxy
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="userId != null">
		        	user_id,
		      	</if>
		      	<if test="proxyId != null">
		        	proxy_id,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="userId != null">
        			#{userId},
      			</if>
      			<if test="proxyId != null">
        			#{proxyId},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.xy.wmall.model.UserProxy">
    	update t_user_proxy
    	<set>
			<if test="userId != null">
    			user_id = #{userId},
  			</if>
			<if test="proxyId != null">
    			proxy_id = #{proxyId},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getUserProxy" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_user_proxy
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="userId != null">
    			and user_id = #{userId}
  			</if>
  			<if test="proxyId != null">
    			and proxy_id = #{proxyId}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询 -->
  	<select id="listUserProxy" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_user_proxy
        <where>
  			<if test="userId != null">
    			and user_id = #{userId}
  			</if>
  			<if test="proxyId != null">
    			and proxy_id = #{proxyId}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into t_user_proxy (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.userId},
				#{item.proxyId},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update t_user_proxy
			<set>
        		<if test="item.userId != null">
        			user_id = #{item.userId},
        		</if>
        		<if test="item.proxyId != null">
        			proxy_id = #{item.proxyId},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
</mapper>