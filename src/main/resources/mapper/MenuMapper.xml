<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.wmall.mapper.MenuMapper">
	
  	<resultMap id="BaseResultMap" type="com.xy.wmall.model.Menu">
		<id column="id" property="id" />	
	    <result column="parent_id" property="parentId" />
	    <result column="sort" property="sort" />
	    <result column="name" property="name" />
	    <result column="icon" property="icon" />
	    <result column="uri" property="uri" />
	    <result column="create_user_id" property="createUserId" />
	    <result column="create_time" property="createTime" />
	    <result column="update_user_id" property="updateUserId" />
	    <result column="update_time" property="updateTime" />
	    <result column="is_delete" property="isDelete" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, parent_id, sort, name, icon, uri, create_user_id, create_time, update_user_id, update_time, is_delete
  	</sql>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.xy.wmall.model.Menu">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into t_menu
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="parentId != null">
		        	parent_id,
		      	</if>
		      	<if test="sort != null">
		        	sort,
		      	</if>
		      	<if test="name != null">
		        	name,
		      	</if>
		      	<if test="icon != null">
		        	icon,
		      	</if>
		      	<if test="uri != null">
		        	uri,
		      	</if>
		      	<if test="createUserId != null">
		        	create_user_id,
		      	</if>
		      	<if test="createTime != null">
		        	create_time,
		      	</if>
		      	<if test="updateUserId != null">
		        	update_user_id,
		      	</if>
		      	<if test="updateTime != null">
		        	update_time,
		      	</if>
		      	<if test="isDelete != null">
		        	is_delete,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="parentId != null">
        			#{parentId},
      			</if>
      			<if test="sort != null">
        			#{sort},
      			</if>
      			<if test="name != null">
        			#{name},
      			</if>
      			<if test="icon != null">
        			#{icon},
      			</if>
      			<if test="uri != null">
        			#{uri},
      			</if>
      			<if test="createUserId != null">
        			#{createUserId},
      			</if>
      			<if test="createTime != null">
        			#{createTime},
      			</if>
      			<if test="updateUserId != null">
        			#{updateUserId},
      			</if>
      			<if test="updateTime != null">
        			#{updateTime},
      			</if>
      			<if test="isDelete != null">
        			#{isDelete},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.xy.wmall.model.Menu">
    	update t_menu
    	<set>
			<if test="parentId != null">
    			parent_id = #{parentId},
  			</if>
			<if test="sort != null">
    			sort = #{sort},
  			</if>
			<if test="name != null">
    			name = #{name},
  			</if>
			<if test="icon != null">
    			icon = #{icon},
  			</if>
			<if test="uri != null">
    			uri = #{uri},
  			</if>
			<if test="updateUserId != null">
    			update_user_id = #{updateUserId},
  			</if>
			<if test="isDelete != null">
    			is_delete = #{isDelete},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getMenu" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_menu
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="parentId != null">
    			and parent_id = #{parentId}
  			</if>
  			<if test="sort != null">
    			and sort = #{sort}
  			</if>
  			<if test="name != null">
    			and name = #{name}
  			</if>
  			<if test="icon != null">
    			and icon = #{icon}
  			</if>
  			<if test="uri != null">
    			and uri = #{uri}
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateUserId != null">
    			and update_user_id = #{updateUserId}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询 -->
  	<select id="listMenu" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_menu
        <where>
  			<if test="parentId != null">
    			and parent_id = #{parentId}
  			</if>
  			<if test="sort != null">
    			and sort = #{sort}
  			</if>
  			<if test="name != null">
    			and name like CONCAT('%', #{name}, '%')
  			</if>
  			<if test="icon != null">
    			and icon = #{icon}
  			</if>
  			<if test="uri != null">
    			and uri like CONCAT('%', #{uri}, '%')
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateUserId != null">
    			and update_user_id = #{updateUserId}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into t_menu (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.parentId},
				#{item.sort},
				#{item.name},
				#{item.icon},
				#{item.uri},
				#{item.createUserId},
				#{item.createTime},
				#{item.updateUserId},
				#{item.updateTime},
				#{item.isDelete},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update t_menu
			<set>
        		<if test="item.parentId != null">
        			parent_id = #{item.parentId},
        		</if>
        		<if test="item.sort != null">
        			sort = #{item.sort},
        		</if>
        		<if test="item.name != null">
        			name = #{item.name},
        		</if>
        		<if test="item.icon != null">
        			icon = #{item.icon},
        		</if>
        		<if test="item.uri != null">
        			uri = #{item.uri},
        		</if>
        		<if test="item.updateUserId != null">
        			update_user_id = #{item.updateUserId},
        		</if>
        		<if test="item.isDelete != null">
        			is_delete = #{item.isDelete},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
	<!-- 根据用户查询权限菜单 -->
  	<select id="listMenuByUserId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
  		select
        	t3.id, t3.parent_id, t3.name, t3.icon, t3.uri
        from 
        	t_user_role t1, t_role_menu t2, t_menu t3
        where 
	        t1.role_id = t2.role_id 
	        and t2.menu_id = t3.id
	  		and t1.user_id = #{userId}
			and t3.is_delete = 0
	    order by 
	    	t3.sort, t3.create_time
  	</select>
	
</mapper>