    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询 -->
  	<select id="listLogistics" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_logistics
        <where>
  			<if test="deliverId != null">
    			and deliver_id = #{deliverId}
  			</if>
  			<if test="deliverIds != null">
    			and deliver_id in
				<foreach collection="deliverIds" item="deliverId" open="(" separator="," close=")">
					#{deliverId}
				</foreach>
  			</if>
  			<if test="companyId != null">
    			and company_id = #{companyId}
  			</if>
  			<if test="number != null">
    			and number = #{number}
  			</if>
  			<if test="price != null">
    			and price = #{price}
  			</if>
  			<if test="cost != null">
    			and cost = #{cost}
  			</if>
  			<if test="remark != null">
    			and remark = #{remark}
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="updateUserId != null">
    			and update_user_id = #{updateUserId}
  			</if>
  			<if test="updateTime != null">
    			and update_time = #{updateTime}
  			</if>
  			<if test="isDelete != null">
    			and is_delete = #{isDelete}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into t_logistics (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.deliverId},
				#{item.companyId},
				#{item.number},
				#{item.price},
				#{item.cost},
				#{item.remark},
				#{item.createUserId},
				#{item.createTime},
				#{item.updateUserId},
				#{item.updateTime},
				#{item.isDelete},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update t_logistics
			<set>
        		<if test="item.deliverId != null">
        			deliver_id = #{item.deliverId},
        		</if>
        		<if test="item.companyId != null">
        			company_id = #{item.companyId},
        		</if>
        		<if test="item.number != null">
        			number = #{item.number},
        		</if>
        		<if test="item.price != null">
        			price = #{item.price},
        		</if>
        		<if test="item.cost != null">
        			cost = #{item.cost},
        		</if>
        		<if test="item.remark != null">
        			remark = #{item.remark},
        		</if>
        		<if test="item.updateUserId != null">
        			update_user_id = #{item.updateUserId},
        		</if>
        		<if test="item.isDelete != null">
        			is_delete = #{item.isDelete},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
</mapper>