<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.wmall.mapper.VerifyCodeMapper">
	
  	<resultMap id="BaseResultMap" type="com.xy.wmall.model.VerifyCode">
		<id column="id" property="id" />	
	    <result column="proxy_id" property="proxyId" />
	    <result column="code" property="code" />
	    <result column="create_user_id" property="createUserId" />
	    <result column="create_time" property="createTime" />
	    <result column="effective_time" property="effectiveTime" />
	    <result column="use_status" property="useStatus" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, proxy_id, code, create_user_id, create_time, effective_time, use_status
  	</sql>
  	
  	<!-- 根据主键查询 -->
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	select 
    	<include refid="Base_Column_List" />
    	from t_verify_code
		where id = #{id}
  	</select>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.xy.wmall.model.VerifyCode">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into t_verify_code
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="proxyId != null">
		        	proxy_id,
		      	</if>
		      	<if test="code != null">
		        	code,
		      	</if>
		      	<if test="createUserId != null">
		        	create_user_id,
		      	</if>
		      	<if test="createTime != null">
		        	create_time,
		      	</if>
		      	<if test="effectiveTime != null">
		        	effective_time,
		      	</if>
		      	<if test="useStatus != null">
		        	use_status,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="proxyId != null">
        			#{proxyId},
      			</if>
      			<if test="code != null">
        			#{code},
      			</if>
      			<if test="createUserId != null">
        			#{createUserId},
      			</if>
      			<if test="createTime != null">
        			#{createTime},
      			</if>
      			<if test="effectiveTime != null">
        			#{effectiveTime},
      			</if>
      			<if test="useStatus != null">
        			#{useStatus},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.xy.wmall.model.VerifyCode">
    	update t_verify_code
    	<set>
			<if test="proxyId != null">
    			proxy_id = #{proxyId},
  			</if>
			<if test="code != null">
    			code = #{code},
  			</if>
			<if test="effectiveTime != null">
    			effective_time = #{effectiveTime},
  			</if>
			<if test="useStatus != null">
    			use_status = #{useStatus},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getVerifyCode" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_verify_code
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="proxyId != null">
    			and proxy_id = #{proxyId}
  			</if>
  			<if test="code != null">
    			and code = #{code}
  			</if>
  			<if test="createUserId != null">
    			and create_user_id = #{createUserId}
  			</if>
  			<if test="createTime != null">
    			and create_time = #{createTime}
  			</if>
  			<if test="effectiveTime != null">
    			and effective_time = #{effectiveTime}
  			</if>
  			<if test="useStatus != null">
    			and use_status = #{useStatus}
  			</if>
