<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xy.wmall.mapper.OrderDetailMapper">
	
  	<resultMap id="BaseResultMap" type="com.xy.wmall.model.OrderDetail">
		<id column="id" property="id" />	
	    <result column="order_id" property="orderId" />
	    <result column="product_id" property="productId" />
	    <result column="amount" property="amount" />
	    <result column="unit_price" property="unitPrice" />
	    <result column="total_price" property="totalPrice" />
	    <result column="give" property="give" />
  	</resultMap>
  	
  	<!-- 表所有字段 -->
  	<sql id="Base_Column_List">
  		id, order_id, product_id, amount, unit_price, total_price, give
  	</sql>
  	
  	<!-- 根据主键查询 -->
  	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    	select 
    	<include refid="Base_Column_List" />
    	from t_order_detail
		where id = #{id}
  	</select>
  	
  	<!-- 新增数据库记录 -->
  	<insert id="insert" parameterType="com.xy.wmall.model.OrderDetail">
    	<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
	    insert into t_order_detail
    		<trim prefix="(" suffix=")" suffixOverrides=",">
		      	<if test="id != null">
		        	id,
		      	</if>
		      	<if test="orderId != null">
		        	order_id,
		      	</if>
		      	<if test="productId != null">
		        	product_id,
		      	</if>
		      	<if test="amount != null">
		        	amount,
		      	</if>
		      	<if test="unitPrice != null">
		        	unit_price,
		      	</if>
		      	<if test="totalPrice != null">
		        	total_price,
		      	</if>
		      	<if test="give != null">
		        	give,
		      	</if>
    		</trim>
    	values
    		<trim prefix="(" suffix=")" suffixOverrides=",">
      			<if test="id != null">
        			#{id},
      			</if>
      			<if test="orderId != null">
        			#{orderId},
      			</if>
      			<if test="productId != null">
        			#{productId},
      			</if>
      			<if test="amount != null">
        			#{amount},
      			</if>
      			<if test="unitPrice != null">
        			#{unitPrice},
      			</if>
      			<if test="totalPrice != null">
        			#{totalPrice},
      			</if>
      			<if test="give != null">
        			#{give},
      			</if>
    		</trim>
  	</insert>
  	
  	<!-- 更新数据库记录 -->
  	<update id="update" parameterType="com.xy.wmall.model.OrderDetail">
    	update t_order_detail
    	<set>
			<if test="orderId != null">
    			order_id = #{orderId},
  			</if>
			<if test="productId != null">
    			product_id = #{productId},
  			</if>
			<if test="amount != null">
    			amount = #{amount},
  			</if>
			<if test="unitPrice != null">
    			unit_price = #{unitPrice},
  			</if>
			<if test="totalPrice != null">
    			total_price = #{totalPrice},
  			</if>
			<if test="give != null">
    			give = #{give},
  			</if>
    	</set>
    	<where>
    		id = #{id}
    	</where>
  	</update>
  	
	<!-- 根据map查询 -->
  	<select id="getOrderDetail" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_order_detail
        <where>
  			<if test="id != null">
    			and id = #{id}
  			</if>
  			<if test="orderId != null">
    			and order_id = #{orderId}
  			</if>
  			<if test="productId != null">
    			and product_id = #{productId}
  			</if>
  			<if test="amount != null">
    			and amount = #{amount}
  			</if>
  			<if test="unitPrice != null">
    			and unit_price = #{unitPrice}
  			</if>
  			<if test="totalPrice != null">
    			and total_price = #{totalPrice}
  			</if>
  			<if test="give != null">
    			and give = #{give}
  			</if>
        </where>
  	</select>
  
  	<!-- 根据map查询-->
  	<select id="listOrderDetail" resultMap="BaseResultMap" parameterType="java.util.Map">
  		select
        <include refid="Base_Column_List"/>
        from t_order_detail
        <where>
  			<if test="orderId != null">
    			and order_id = #{orderId}
  			</if>
  			<if test="orderIds != null">
    			and order_id in
				<foreach collection="orderIds" item="orderId" open="(" separator="," close=")">
					#{orderId}
				</foreach>
  			</if>
  			<if test="productId != null">
    			and product_id = #{productId}
  			</if>
  			<if test="amount != null">
    			and amount = #{amount}
  			</if>
  			<if test="unitPrice != null">
    			and unit_price = #{unitPrice}
  			</if>
  			<if test="totalPrice != null">
    			and total_price = #{totalPrice}
  			</if>
  			<if test="give != null">
    			and give = #{give}
  			</if>
        </where>
        <if test="groupBy != null">
        	group by ${groupBy}
        </if>
        <if test="orderBy != null">
        	order by ${orderBy}
        </if>
  	</select>
  	
  	<!-- 批量保存 -->
	<insert id="batchInsert" parameterType="java.util.List">
		insert into t_order_detail (<include refid="Base_Column_List" />)
		values 
		<foreach collection="list" index="index" item="item" separator=",">
			<trim prefix="(" suffix=")" suffixOverrides=",">
				#{item.id},
				#{item.orderId},
				#{item.productId},
				#{item.amount},
				#{item.unitPrice},
				#{item.totalPrice},
				#{item.give},
			</trim>
		</foreach>
	</insert>
	
	<!-- 批量更新 -->
  	<update id="batchUpdate" parameterType="java.util.List">
		<foreach collection="list" index="index" item="item" separator=";">
			update t_order_detail
			<set>
        		<if test="item.orderId != null">
        			order_id = #{item.orderId},
        		</if>
        		<if test="item.productId != null">
        			product_id = #{item.productId},
        		</if>
        		<if test="item.amount != null">
        			amount = #{item.amount},
        		</if>
        		<if test="item.unitPrice != null">
        			unit_price = #{item.unitPrice},
        		</if>
        		<if test="item.totalPrice != null">
        			total_price = #{item.totalPrice},
        		</if>
        		<if test="item.give != null">
        			give = #{item.give},
        		</if>
			</set>
            where id = #{item.id}
		</foreach>
	</update>
	
	<!-- 删除订单详情 -->
	<delete id="delete" parameterType="java.lang.Integer">
  		delete from t_order_detail where order_id = #{orderId} 
  	</delete>
</mapper>